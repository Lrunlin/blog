{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    //变量和函数参数未使用警告
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "removeComments": true, //取消注释
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@type/*": ["types/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true, // 不允许隐式的 any 类型
    "watch": true,
    "typeRoots": ["types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.d.ts"]
}
